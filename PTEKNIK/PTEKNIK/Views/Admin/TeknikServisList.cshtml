@model IEnumerable<PTEKNIK.Models.USERS>

@{
    ViewBag.Title = "TeknikServisList";
    Layout = "~/Views/Shared/_MasterAdminLayout.cshtml";
}

<h2>Teknik Servislerim</h2>

<p>
    @Html.ActionLink("Yeni Kullanıcı Oluştur", "ClientList")
</p>

<div class="row">
    <form asp-controller="TeknikServisList" asp-action="TeknikServisList">
        <div class="col-lg-4">
            <div class="col-lg-10">
                <input type="text" class="form-control" name="SearchSTR">
            </div>
            <div class="col-lg-2">
                <input type="submit" class="btn btn-default" value="Ara" />
            </div>
        </div>
    </form>
</div>
<table class="table table-striped" style="margin-top:10px;">
    <tr>
        <th></th>
        <th>
           Kullanıcı Adı
        </th>

        <th>
            Cari Adı
        </th>
        <th>
            Cari Kodu
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TEL)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="TeknikTalep?clientid=@item.CLIENTREF&caridef=@item.NAME&carikod=@item.CODE" class="btn btn-success btn-sm">Seç</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USERNAME)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TEL)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>

        </tr>
    }

</table>
