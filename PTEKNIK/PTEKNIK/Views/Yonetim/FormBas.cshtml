@model PTEKNIK.Models.FORMLines
@{
    ViewBag.Title = "FormBas";
    Layout = "~/Views/Shared/_MasterYonetimLayout.cshtml";
}

<div class="form-horizontal">
    <h4>Yeni Form Oluştur</h4>

    <hr />
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Bilgileri
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Belge No</div></span>
                            @Html.EditorFor(model => model.BELGESTR, new { htmlAttributes = new { id = "TXTBELGESTR", @class = "form-control", @disabled = "true" } })
                            @Html.ValidationMessageFor(model => model.BELGESTR, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style=" text-align:left;">/</div></span>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.BELGENO, new { htmlAttributes = new { id = "TXTBELGENO", @class = "form-control", @disabled = "true" } })
                            @Html.ValidationMessageFor(model => model.BELGENO, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon">Firma Adı</span>
                            @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon">Müşterinin Adı</span>
                            @Html.EditorFor(model => model.ADSOYAD, new { htmlAttributes = new { id = "TXTADSOYAD", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ADSOYAD, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Adres</div></span>
                            @Html.EditorFor(model => model.ADRES, new { htmlAttributes = new { id = "TXTADRES", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ADRES, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">GSM</div></span>
                            @Html.EditorFor(model => model.TEL, new { htmlAttributes = new { id = "TXTTEL", @class = "form-control phone" } })
                            @Html.ValidationMessageFor(model => model.TEL, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Tel</div></span>
                            @Html.EditorFor(model => model.TEL2, new { htmlAttributes = new { id = "TXTTEL2", @class = "form-control phone" } })
                            @Html.ValidationMessageFor(model => model.TEL2, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">E-Posta</div></span>
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { id = "TXTEMAIL", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })

                        </div>
                    </div>


                </div>
                <div class="row" style="@ViewData["MONTAJDATE"]">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Montaj Tarihi</div></span>
                            @Html.EditorFor(model => model.MONTAJDATE, new { htmlAttributes = new { id = "TXTMONTAJDATE", @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.MONTAJDATE, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row" style="@ViewData["ARIZADATE"]">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Arıza Tarihi</div></span>
                            @Html.EditorFor(model => model.ARIZADATE, new { htmlAttributes = new { id = "TXTARIZADATE", @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.ARIZADATE, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Açıklama</div></span>
                            @Html.EditorFor(model => model.ACIKLAMA, new { htmlAttributes = new { id = "TXTACIKLAMA", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ACIKLAMA, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon"><div style="width:90px; text-align:left;">Yapılan İş</div></span>
                            @Html.EditorFor(model => model.CACIKLAMA, new { htmlAttributes = new { id = "TXTCACIKLAMA", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CACIKLAMA, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#ModalOnay">
                        Onayla
                    </button>
                    <button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#ModalRed">
                        Reddet
                    </button>

                    <a href="javascript::" onclick="window.print();" class="btn btn-info">Yazdır</a>
                </div>
                <script type="text/javascript">
                    function OnayYonlendir(durum) {
                        var TXTYonAciklama;
                        if (durum == 2) {
                            TXTYonAciklama = document.getElementById("TXTYONACIKLAMA");
                        } else if(durum==-2) {
                            TXTYonAciklama = document.getElementById("TXTREDACIKLAMA");
                        }
                        window.location.href = "FormOnay?ficheno=@Request.QueryString["ficheno"]&onay=" + durum + "&aciklama=" + TXTYonAciklama.value;
                    }
                </script>

                <div class="modal fade" id="ModalOnay" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog bg-success">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h4 class="modal-title" id="myModalLabel">Onay Ekranı</h4>
                            </div>
                            <div class="modal-body">
                                <textarea name="YONACIKLAMA" id="TXTYONACIKLAMA" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success" onclick="OnayYonlendir(2);">Onayla</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>

                <div class="modal fade" id="ModalRed" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog bg-danger">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h4 class="modal-title" id="myModalLabel">Red Sebebinizi Giriniz</h4>
                            </div>
                            <div class="modal-body">
                                <textarea id="TXTREDACIKLAMA" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" onclick="OnayYonlendir(-2);">İşlemi Bitir</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>




            </div>
            <div class="panel-footer">

            </div>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
        function FormUrunGetir() {
            var HFficheno ='@Request.QueryString["ficheno"]';
            var i = 0;
            $.ajax({
                cache: false,
                type: "GET",
                url: "GetFormUrunList",
                data: { 'ficheno': HFficheno },
                success: function (data) {
                    var result = "";
                    var TBLFORMS = document.getElementById('TBLForms');
                    $.each(data, function (id, FormBarkod) {
                        result += '<tr class="' + FormBarkod.TRSTYLE + '" style="border-bottom:1px solid #dadada;font-size:12px;">' +
                            '<td>' + FormBarkod.MONTAJ + '</td>' +
                            '<td>' + FormBarkod.GARANTI + '</td>' +
                            '<td>' + FormBarkod.UrunAdi + '</td >' +
                            '</tr>';
                        i++;
                    });
                    TBLFORMS.innerHTML = result;
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve DATA!!!.');
                }

            });
        }

        window.onload = FormUrunGetir();
    </script>



    <div class="col-lg-6">
        <div class="row" style="padding:5px;">
            <table class="table table-hover">
                <thead>
                    <tr><th colspan="3" style="text-align:center;">Klimalar</th></tr>
                    <tr class="bg-primary">
                        <th></th>
                        <th>Garanti Bitiş</th>
                        <th>Ürün</th>
                    </tr>
                </thead>
                <tbody id="TBLForms"></tbody>
            </table>
        </div>
        <script type="text/javascript">
        function ServeGetir() {
            var HFficheno ='@Request.QueryString["ficheno"]';
            var i = 0;
            $.ajax({
                cache: false,
                type: "GET",
                url: "GetFormServes",
                data: { 'ficheno': HFficheno },
                success: function (data) {
                    var result = "";
                    var TBLServes = document.getElementById('TBLServes');
                    $.each(data, function (id, FORMServes) {
                        result += '<tr style="border-bottom:1px solid #dadada;font-size:12px;">' +
                            '<td></td>' +
                            '<td>' + FORMServes.SERVNAME + '</td>' +
                            '<td>' + FORMServes.ACIKLAMA + '</td>' +
                            '</tr>';
                        i++;
                    });
                    TBLServes.innerHTML = result;
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve DATA!!!.');
                }

            });
        }

            window.onload = ServeGetir();
        </script>

        <div class="row" style="margin-top:10px;">
            <table class="table table-hover">
                <thead>
                    <tr><th colspan="3" style="text-align:center;">Yapılan Hizmetler</th></tr>
                    <tr class="bg-primary">
                        <th></th>
                        <th>Hizmet Adı</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody id="TBLServes"></tbody>
            </table>
        </div>
    </div>



</div>