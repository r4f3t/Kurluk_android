    <script type="text/javascript">
        function GetConditioners(fromSearch) {
            var searchParam = '';
            if (fromSearch == 1) {
                searchParam = document.getElementById('TXTCIHAZSERINO').value;
            }
            if (searchParam == '') {
                TXTSATICIFIRMA.value = "";
                TXTFATURANO.value = "";
                TXTNAME.value = "";
                TXTMontajDurum.value = "";
                TXTSATICIFIRMA.disabled = false;
                TXTFATURANO.disabled = false;
                TXTNAME.disabled = false;
                return;
            }
            var i = 0;
            $.ajax({
                cache: false,
                type: "GET",
                url: "GetConditioner",
                data: { 'GBarcode': searchParam },
                success: function (data) {
                    var result = "";
                    var TXTSATICIFIRMA = document.getElementById('TXTSATICIFIRMA');
                    var TXTFATURADATE = document.getElementById('TXTFATURADATE');
                    var TXTFATURANO = document.getElementById('TXTFATURANO');
                    var TXTNAME = document.getElementById('TXTNAME');
                    var TXTMontajDurum = document.getElementById('TXTMontajDurum');
                    $.each(data, function (id, BarcodeModel) {
                        TXTSATICIFIRMA.value = BarcodeModel.FATMUSTERI;
                        TXTFATURANO.value = BarcodeModel.FATTURU;
                        TXTNAME.value = BarcodeModel.NAME;
                        TXTSATICIFIRMA.setAttribute("disabled", "true");
                        TXTFATURANO.setAttribute("disabled", "true");
                        TXTNAME.setAttribute("disabled", "true");
                        if (BarcodeModel.FATTIPI == "MD") { TXTMontajDurum.value = 'MONTAJ DAHİL' }
                        else { TXTMontajDurum.value = 'HARİÇ' }
                        if (BarcodeModel.FATTARIH != null) { TXTFATURADATE.value = new Date(parseInt(BarcodeModel.FATTARIH.replace("/Date(", "").replace(")/", ""), 10)).toISOString().split('T')[0]; }

                    });
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve DATA!!!.');
                }

            });

        }
    </script>


