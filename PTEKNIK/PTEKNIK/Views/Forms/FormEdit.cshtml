        <script type="text/javascript">
            function UrunSil(REF) {
                $.ajax({
                    type: "POST",
                    url: "FormUrunSil",
                    data: {
                        LOGICALREF: REF
                    },
                    success: function (response) {
                        FormUrunGetir();
                    }
                });
            }
            function UrunEkle() {
                if ($("#TXTICBARKOD").val().length == 0 || $("#TXTDISBARKOD").val().length == 0) {
                    $("#TXTICBARKOD").css("background", "red");
                    $("#TXTICBARKOD").css("color", "white");
                    $("#TXTDISBARKOD").css("background", "red");
                    $("#TXTDISBARKOD").css("color", "white");
                    alert("İç Yada Dış Barkodları Girmeden Ürün Ekleyemezsiniz!!!");
                    return;
                }
                $.ajax(
                    {
                        cache: false,
                        type: "POST", //HTTP POST Method
                        url: "FormUrunEkle", // Controller/View
                        data: { //Passing data
                            ICBARKOD: $("#TXTICBARKOD").val(), //Reading text box values using Jquery
                            DISBARKOD: $("#TXTDISBARKOD").val(),
                            BARKOD3: $("#TXTBARKOD3").val(),
                            FICHENO: $("#HFFICHENO").val(),
                            FORMTYPE:'@Request.QueryString["formtype"]'
                        },
                        success: function (response) {
                            if (!response.success) {
                                alert('Barkodlarınızda Hata Var!!!');
                            }
                            //
                            $("#TXTICBARKOD").val("");
                            $("#TXTDISBARKOD").val("");
                            $("#TXTBARKOD3").val("");
                            FormUrunGetir();
                        }
                    });

            }
            function FormUrunGetir() {
                var HFficheno = $("#TXTBELGESTR").val() + '-' + $("#TXTBELGENO").val();
                var i = 0;
                $.ajax({
                    cache: false,
                    type: "GET",
                    url: "GetFormUrunList",
                    data: { 'ficheno': HFficheno },
                    success: function (data) {
                        var result = "";
                        var TBLFORMS = document.getElementById('TBLForms');
                        $.each(data, function (id, FormBarkod) {
                            result += '<tr style="border-bottom:1px solid #dadada;font-size:12px;">' +
                                '<td><a href="#" class="btn btn-sm btn-danger" onclick="UrunSil(' + FormBarkod.LOGICALREF + ')" >Sil</a></td>' +
                                '<td>' + FormBarkod.MONTAJ + '</td>' +
                                '<td>' + FormBarkod.GARANTI + '</td>' +
                                '<td>' + FormBarkod.UrunAdi + '</td >' +
                                '</tr>';
                            i++;
                        });
                        TBLFORMS.innerHTML = result;
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert('Failed to retrieve DATA!!!.');
                    }

                });
            }

            window.onload = FormUrunGetir();
        </script>

